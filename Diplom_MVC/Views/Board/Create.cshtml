@model Diplom_MVC.Models.ViewModels.Boards.CreateBoardViewModel
<h2>Создание новой доски</h2>
<form method="post" asp-controller="Board" asp-action="Create">
		<div asp-validation-summary="ModelOnly"></div>
		<div>
			<label asp-for="Title"></label><br/>
			<input asp-for="Title"/>
		</div>
		<div>
		<label asp-for="Description"></label><br />
		<input asp-for="Description" />
		</div>
	<div>
		<input type="submit" value="Создать" />
	</div>
</form>